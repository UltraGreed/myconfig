<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<menu id="root-menu" label="Openbox 3">
  <separator label="Applications" />
  <item label="Alacritty">
    <action name="Execute">
      <command>alacritty</command>
    </action>
  </item>
  <item label="Firefox">
    <action name="Execute">
      <command>firefox-bin</command>
    </action>
  </item>
  <item label="Steam">
    <action name="Execute">
      <command>steam</command>
    </action>
  </item>
  <item label="Discord">
    <action name="Execute">
      <command>Discord --no-sandbox</command>
    </action>
  </item>
  <separator label="System" />
  <item label="Log Out">
    <action name="Exit">
      <prompt>yes</prompt>
    </action>
  </item>
  <item label="Reconfigure">
      <action name="Reconfigure"/>
          <prompt>yes</prompt>
      </action>
  </item>
</menu>

</openbox_menu>
